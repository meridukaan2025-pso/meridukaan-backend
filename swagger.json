{
  "openapi": "3.0.0",
  "info": {
    "title": "Meri Dukaan POS + Admin Analytics API",
    "version": "1.0.0",
    "description": "Complete API documentation for Meri Dukaan Point of Sale system with Admin Analytics",
    "contact": {
      "name": "API Support",
      "email": "support@meridukaan.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    },
    {
      "url": "https://api.meridukaan.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints"
    },
    {
      "name": "Stores",
      "description": "Store information endpoints"
    },
    {
      "name": "POS",
      "description": "Point of Sale operations"
    },
    {
      "name": "Admin",
      "description": "Admin analytics and dashboard endpoints"
    },
    { "name": "Users", "description": "User management (ADMIN only)" },
    { "name": "Products", "description": "Product CRUD and stock" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from /auth/login"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "sales1@meridukaan.com"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "password123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "role": {
            "type": "string",
            "enum": ["ADMIN", "SALES", "INVENTORY", "PURCHASE"]
          },
          "storeId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "4158f662-9e15-42ef-9c4e-345b9465693c",
            "description": "Store UUID"
          },
          "name": {
            "type": "string",
            "example": "Store Karachi Central",
            "description": "Store name"
          },
          "region": {
            "type": "string",
            "example": "Sindh",
            "description": "Store region"
          },
          "city": {
            "type": "string",
            "example": "Karachi",
            "description": "Store city"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2026-01-15T10:00:00.000Z",
            "description": "Store creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2026-01-15T10:00:00.000Z",
            "description": "Store last update timestamp"
          }
        }
      },
      "ScanRequest": {
        "type": "object",
        "required": ["qrValue"],
        "properties": {
          "qrValue": {
            "type": "string",
            "example": "COKE-330ML",
            "description": "QR code value (Product SKU). Store ID is automatically taken from your assigned store."
          }
        }
      },
      "ScanResponse": {
        "type": "object",
        "properties": {
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "stockQty": {
            "type": "integer",
            "example": 50
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "sku": {
            "type": "string",
            "example": "COKE-330ML"
          },
          "name": {
            "type": "string",
            "example": "Coca-Cola 330ml"
          },
          "unitPrice": {
            "type": "string",
            "example": "35.00"
          },
          "category": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Beverages"
              }
            }
          },
          "brand": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "Coca-Cola"
              }
            }
          }
        }
      },
      "InvoiceItemRequest": {
        "type": "object",
        "required": ["productId", "qty"],
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "qty": {
            "type": "integer",
            "minimum": 1,
            "example": 5
          }
        }
      },
      "CreateInvoiceRequest": {
        "type": "object",
        "required": ["items"],
        "properties": {
          "storeId": {
            "type": "string",
            "format": "uuid",
            "example": "4158f662-9e15-42ef-9c4e-345b9465693c",
            "description": "Optional. Automatically set from your assigned store for SALES users. Required for ADMIN users if not assigned to a store."
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/InvoiceItemRequest"
            },
            "minItems": 1,
            "description": "Array of invoice items"
          },
          "clientInvoiceRef": {
            "type": "string",
            "description": "Optional client invoice reference",
            "example": "INV-2026-001"
          }
        }
      },
      "InvoiceItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "qty": {
            "type": "integer"
          },
          "unitPrice": {
            "type": "string",
            "example": "35.00"
          },
          "lineTotal": {
            "type": "string",
            "example": "175.00"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        }
      },
      "Invoice": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "storeId": {
            "type": "string",
            "format": "uuid"
          },
          "workerId": {
            "type": "string",
            "format": "uuid"
          },
          "totalAmount": {
            "type": "string",
            "example": "175.00"
          },
          "totalItems": {
            "type": "integer",
            "example": 5
          },
          "status": {
            "type": "string",
            "enum": ["COMPLETED", "CANCELLED"],
            "example": "COMPLETED"
          },
          "pdfUrl": {
            "type": "string",
            "example": "/storage/invoices/invoice-uuid.pdf"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/InvoiceItem"
            }
          }
        }
      },
      "FiltersResponse": {
        "type": "object",
        "properties": {
          "regions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["Punjab", "Sindh", "Islamabad Capital Territory"]
          },
          "cities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["Lahore", "Karachi", "Islamabad"]
          },
          "stores": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "name": {
                  "type": "string"
                },
                "region": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                }
              }
            }
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "name": {
                  "type": "string"
                },
                "parentId": {
                  "type": "string",
                  "format": "uuid",
                  "nullable": true
                }
              }
            }
          },
          "manufacturers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "brands": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "name": {
                  "type": "string"
                },
                "manufacturerId": {
                  "type": "string",
                  "format": "uuid"
                },
                "manufacturerName": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "AnalyticsSummary": {
        "type": "object",
        "properties": {
          "salesValue": {
            "type": "string",
            "example": "50000.00"
          },
          "salesVolume": {
            "type": "integer",
            "example": 150
          },
          "distribution": {
            "type": "number",
            "example": 75.5
          },
          "weightedDistribution": {
            "type": "number",
            "example": 75.5
          },
          "shareInShops": {
            "type": "number",
            "example": 60.0
          },
          "avgPricePerLitre": {
            "type": "string",
            "example": "45.50"
          },
          "avgPricePerSKU": {
            "type": "string",
            "example": "333.33"
          }
        }
      },
      "SalesTrend": {
        "type": "object",
        "properties": {
          "bucket": {
            "type": "string",
            "enum": ["daily", "weekly"],
            "example": "daily"
          },
          "series": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "example": "2026-01-09"
                },
                "salesValue": {
                  "type": "string",
                  "example": "5000.00"
                },
                "salesVolume": {
                  "type": "integer",
                  "example": 25
                }
              }
            }
          }
        }
      },
      "BrandDistribution": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "brandId": {
                  "type": "string",
                  "format": "uuid"
                },
                "brandName": {
                  "type": "string"
                },
                "salesValue": {
                  "type": "string"
                },
                "salesVolume": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "MarketShare": {
        "type": "object",
        "properties": {
          "metric": {
            "type": "string",
            "enum": ["value", "volume"],
            "example": "value"
          },
          "slices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "value": {
                  "type": "number",
                  "description": "Percentage",
                  "example": 45.5
                }
              }
            }
          }
        }
      },
      "BrandsList": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "brandId": {
                  "type": "string",
                  "format": "uuid"
                },
                "brandName": {
                  "type": "string"
                },
                "salesValue": {
                  "type": "string"
                },
                "shareValue": {
                  "type": "string"
                },
                "avgPrice": {
                  "type": "string"
                },
                "avgPricePerLitre": {
                  "type": "string"
                }
              }
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer"
              },
              "pageSize": {
                "type": "integer"
              },
              "total": {
                "type": "integer"
              },
              "totalPages": {
                "type": "integer"
              }
            }
          }
        }
      },
      "TopSKUs": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "sku": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "brandName": {
                  "type": "string"
                },
                "salesValue": {
                  "type": "string"
                },
                "salesVolume": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "example": 400
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "path": {
            "type": "string",
            "example": "/pos/invoices"
          },
          "method": {
            "type": "string",
            "example": "POST"
          },
          "message": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          }
        }
      },
      "CreateUserRequest": {
        "type": "object",
        "required": ["email", "password", "role"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 6 },
          "role": { "type": "string", "enum": ["ADMIN", "SALES", "INVENTORY", "PURCHASE"] },
          "storeId": { "type": "string", "format": "uuid" }
        }
      },
      "CreateProductAdminRequest": {
        "type": "object",
        "required": ["sku", "name", "unitPrice"],
        "properties": {
          "sku": { "type": "string" },
          "name": { "type": "string" },
          "categoryId": { "type": "string", "format": "uuid" },
          "categoryName": { "type": "string" },
          "brandId": { "type": "string", "format": "uuid" },
          "brandName": { "type": "string" },
          "manufacturerId": { "type": "string", "format": "uuid" },
          "manufacturerName": { "type": "string" },
          "unitPrice": { "type": "number" },
          "unitSizeMl": { "type": "number" },
          "stockQuantity": { "type": "integer" },
          "storeId": { "type": "string", "format": "uuid" }
        }
      },
      "AddStockRequest": {
        "type": "object",
        "required": ["storeId", "quantity"],
        "properties": {
          "storeId": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Authenticate user and receive JWT token",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User signup",
        "description": "Create a new user and receive JWT. Store ID required for SALES.",
        "operationId": "signup",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "role"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 6 },
                  "role": { "type": "string", "enum": ["ADMIN", "SALES", "INVENTORY", "PURCHASE"] },
                  "storeId": { "type": "string", "format": "uuid" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Bad request" },
          "409": { "description": "Email already exists" }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Logout",
        "description": "Logout. Client should remove token. JWT is stateless.",
        "operationId": "logout",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Logged out",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/stores": {
      "get": {
        "tags": ["Stores"],
        "summary": "Get all stores",
        "description": "Retrieve a list of all stores. Public endpoint - no authentication required. Use this to get store IDs for user signup.",
        "operationId": "getAllStores",
        "responses": {
          "200": {
            "description": "List of stores retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Store"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/stores/{id}": {
      "delete": {
        "tags": ["Stores"],
        "summary": "Delete store",
        "description": "Delete a store by ID. ADMIN only.",
        "operationId": "deleteStore",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
        ],
        "responses": {
          "200": { "description": "Store deleted" },
          "400": { "description": "Cannot delete: store has users, inventory, or invoices" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Store not found" }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create user",
        "description": "Create a new user. ADMIN only. Store ID required for SALES.",
        "operationId": "createUser",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateUserRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Bad request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "409": { "description": "Email already exists" }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "description": "Retrieve all users. ADMIN only.",
        "operationId": "getAllUsers",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of users" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by ID",
        "operationId": "getUser",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }],
        "responses": { "200": { "description": "User found" }, "404": { "description": "User not found" } }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user",
        "description": "Update user. All fields optional. ADMIN only.",
        "operationId": "updateUser",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "role": { "type": "string", "enum": ["ADMIN", "SALES", "INVENTORY", "PURCHASE"] },
                  "storeId": { "type": "string", "format": "uuid" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "User updated" }, "400": { "description": "Bad request" }, "404": { "description": "User not found" } }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete user",
        "operationId": "deleteUser",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }],
        "responses": { "200": { "description": "User deleted" }, "404": { "description": "User not found" } }
      }
    },
    "/products": {
      "post": {
        "tags": ["Products"],
        "summary": "Create product (full)",
        "description": "Create product with existing category, brand, manufacturer IDs.",
        "operationId": "createProduct",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["sku", "name", "categoryId", "brandId", "manufacturerId", "unitPrice"],
                "properties": {
                  "sku": { "type": "string" },
                  "name": { "type": "string" },
                  "categoryId": { "type": "string", "format": "uuid" },
                  "brandId": { "type": "string", "format": "uuid" },
                  "manufacturerId": { "type": "string", "format": "uuid" },
                  "unitPrice": { "type": "number" },
                  "unitSizeMl": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Product created" }, "400": { "description": "Bad request" }, "404": { "description": "Not found" } }
      },
      "get": {
        "tags": ["Products"],
        "summary": "Get all products",
        "description": "List all products.",
        "operationId": "getAllProducts",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "List of products" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/products/admin-create": {
      "post": {
        "tags": ["Products"],
        "summary": "Create product (admin)",
        "description": "Create with optional new category/brand/manufacturer by name. storeId required when stockQuantity > 0.",
        "operationId": "createProductAdmin",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
